<resources>

    <attr name="layoutStyle" format="enum">
        <enum name="triangle" value="0" />
        <enum name="flat" value="1" />
    </attr>

    <declare-styleable name="VolumeView">
        <attr name="empty_color" format="reference" />
        <attr name="filled_color" format="reference" />
        <attr name="number_of_bars" format="integer" />
        <attr name="filled_bars" format="integer" />
        <attr name="bar_size" format="float" />
        <attr name="seperator_size" format="float" />
        <attr name="layoutStyle"/>
    </declare-styleable>

</resources>